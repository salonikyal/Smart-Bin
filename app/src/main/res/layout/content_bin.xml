<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_viewBin"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/borderdrawable" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp"> <!--changes-->

            <TextView
                android:id="@+id/binId"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Bin 1"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="0.75"
                android:background="@drawable/valbox"
                android:gravity="center"
                android:text="20"
                android:textSize="25dp" />

            <FrameLayout
                android:id="@+id/level_frame"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                >

                <View
                    android:id="@+id/percent_highlight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/valbox_percent"
                />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:background="@drawable/valbox_percent"
                    android:text="100%"
                    android:textSize="25dp" />

            </FrameLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>